<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link rel="stylesheet" href="./styles.css">
</head>
<style>
    body {
        background: linear-gradient(135deg, #83a4d4 0%, #b6fbff 100%);
        color: #333;
    }
    .login {
        color: #cca8e9; 
        padding-left: 60px;
    }
    .card {
        background-image: url(/img/card-bgr-3.jpg);
        background-size: 250px;
        align-items: center;
        margin: 0px -187px 0px 10px;
        height: 100vh;
        padding: 100px;
    }
    .card-body {
        background-color: #fafafa;
        color: #333; 
    }
    .register {
        text-align: center;
        color: #2c3e50; 
    }
    .button {
        width: 110px;
        color: #2c3e50; 
        margin-left: 60px;
        text-decoration: none;
        background-color: #2c3e50;
        border: 1px solid white;
        padding: 10px;
        border-radius: 8px;
        box-shadow: inset 0 0 0 0 #2c3e50;
        transition: ease-out 0.4s;
    }
    .button:hover {
        box-shadow: inset 110px 0 0 0 white;
    }
    .btn {
        margin-left: 70px;
    }
    .grid {
        display: grid;
        grid-template-columns: 2fr 2fr;
        gap: 200px;
    }
    .image {
        padding-top: 80px;
    }
    .body {
        padding-top: 100px;
    }
    .incorrect {
        padding-top: 20px;
        display: flex;
        justify-content: center;
        color: red;
    }
    #google {
        margin-right: 70px;
        display: inline-flex;
        align-items: center;
        padding: 10px 20px;
        margin: 10px;
        font-size: 16px;
        color: black; 
        background-color: #cca8e9;
        box-shadow: inset 0 0 0 0 #cca8e9;
        border: 1px solid white;
        border-radius: 8px;
        text-decoration: none;
        transition: ease-out 0.4s;
    }
    #google:hover {
        box-shadow: inset 250px 0 0 0 white;
    }
    #google i {
        margin-right: 10px;
    }
    .btn {
    font-size: 1em;
    padding: 12px 25px;
    border-radius: 25px;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
  }

  .btn-light {
    background-color: #2c3e50;
    color: white;
    border: none;
  }

  .btn-dark {
    background-color: #bdc3c7;
    color: #2c3e50;
    border: none;
  }

  .btn-light:hover {
    background-color: #34495e;
  }

  .btn-dark:hover {
    background-color: #7f8c8d;
  }
</style>
<body>
    <div class="container grid">
        <div class="image">
            <img src="/img/register-bgr-removebg-preview.png" alt="Background Image">
        </div>
        <div class="card">
            <div class="card-body">
                <div class="body">
                    <h1 class="register">Register</h1>
                    <form action="/register" method="POST" id="register-form">
                        <label for="username">UserName</label>
                        <input type="text" class="form-control" name="username" style="width: 250px;">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" id="password" style="width: 250px;">
                        <span id="password-strength"></span>
                        <div class="g-recaptcha" data-sitekey="YOUR_SITE_KEY" style="margin: 15px 0;"></div>
                        <button type="submit" class="btn btn-light btn-lg">Register</button>
                    </form>
            
            </div>
        </div>
    </div>
    <script>
        document.getElementById('password').addEventListener('input', function() {
            var password = document.getElementById('password').value;
            var strengthBadge = document.getElementById('password-strength');
            var strength = 0;
            var regex = /[$-/:-?{-~!"^_`\[\]]/;

            if (password.match(/[a-z]+/)) {
                strength += 1;
            }
            if (password.match(/[A-Z]+/)) {
                strength += 1;
            }
            if (password.match(/[0-9]+/)) {
                strength += 1;
            }
            if (password.match(regex)) {
                strength += 1;
            }

            switch (strength) {
                case 0:
                case 1:
                    strengthBadge.style.backgroundColor = '#dc3545';
                    strengthBadge.style.marginLeft = '70px';
                    strengthBadge.innerText = 'Weak Password';
                    break;
                case 2:
                    strengthBadge.style.backgroundColor = '#ffc107';
                    strengthBadge.style.marginLeft = '70px';
                    strengthBadge.innerText = 'Fair Password';
                    break;
                case 3:
                    strengthBadge.style.backgroundColor = '#28a745';
                    strengthBadge.style.marginLeft = '70px';
                    strengthBadge.innerText = 'Good Password';
                    break;
                case 4:
                    strengthBadge.style.backgroundColor = '#28a745';
                    strengthBadge.style.marginLeft = '70px';
                    strengthBadge.innerText = 'Excellent Password';
                    break;
            }
        });
    </script>
</body>
</html>
